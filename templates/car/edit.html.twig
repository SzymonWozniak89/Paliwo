                                    <div class="form-error">
                                        {{ form_errors(carEdit.carBrand) }}
                                    </div>
                                </div> 
                                </br>
                                <div class="form-control">
                                    {{ form_label(carEdit.carModel) }}
                                    {{ form_widget(carEdit.carModel) }}
                                    <small>{{ form_help(carEdit.carModel) }}</small>
                                    <div class="form-error">
                                        {{ form_errors(carEdit.carModel) }}
                                    </div>
                                </div> 
                                </br>
                                <div class="form-control">
                                    {{ form_label(carEdit.carFuel) }}
                                    {{ form_widget(carEdit.carFuel) }}
                                    <small>{{ form_help(carEdit.carFuel) }}</small>
                                    <div class="form-error">
                                        {{ form_errors(carEdit.carFuel) }}
                                    </div>
                                </div>   
                                </br>
                                {{ form_row(carEdit.submit, { label: 'Zmie≈Ñ' }) }}

                            {{ form_end(carEdit, {render_rest: false}) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
    .form-control{
        border: 0;
    }
    .form-control input{
        border: 1px solid lightgrey;
    }
    </style>
{% endblock %}